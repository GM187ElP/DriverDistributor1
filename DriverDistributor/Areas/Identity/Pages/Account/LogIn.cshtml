@page
@using DriverDistributor.Areas.Identity.Pages.Account
@model DriverDistributor.Areas.Identity.Pages.Account.LogInModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ورود کاربر";
}

<div class="my-center-wrapper">
    <div class="ui container">
        <div class="login-card">

            @if (ViewData["Errors"] != null)
            {
                <div class="custom-alert error-alert">
                    @ViewData["Errors"]
                </div>
            }

            @if (ViewData["Success"] != null)
            {
                <div class="custom-alert success-modal show-success">
                    @ViewData["Success"]
                </div>
            }

            @if (ViewData["Warning"] != null)
            {
                <div class="custom-alert warning-alert">
                    @ViewData["Warning"]
                </div>
            }

            <h1 class="login-title">@ViewData["Title"]</h1>

            <form id="account" method="post" class="login-form">
                @Html.AntiForgeryToken()

                <div class="form-field">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="validation-error"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" type="password" />
                    <span asp-validation-for="Input.Password" class="validation-error"></span>
                </div>

                <div class="form-group remember-me">
                    <label class="checkbox-label">
                        <input asp-for="Input.RememberMe" />
                        <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                    </label>
                </div>


                <button type="submit" class="submit-button">ورود</button>

                <p class="text-green">
                    <strong>اگر تاکنون ثبت نام نکرده اید لینک زیر را کلیک کنید</strong>
                </p>
                <div style="text-align: center;">
                    <a class="link-button" href="/Identity/Account/Register">ثبت نام</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @* <partial name="_ValidationScriptsPartial" /> *@

    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const successModal = document.querySelector('.success-modal');
            if (successModal) {
                setTimeout(() => {
                    successModal.classList.add('hide-success');
                    window.location.href = '/';
                }, 3000);
            }
        });
    </script>
}

<style>
    /* Center wrapper */
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background: #f5f5f5;
        direction: rtl;
    }

    .ui.container {
        width: 100% !important;
        max-width: 480px !important;
        margin-left: auto !important;
        margin-right: auto !important;
    }

    /* Card */
    .login-card {
        max-width: 480px;
        width: 100%;
        background: #fff;
        border-radius: 14px;
        padding: 35px 30px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        border: 1px solid #ccc;
    }

    .login-title {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
        color: #333;
    }

    .form-field {
        margin-bottom: 22px;
    }

        .form-field label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }

        .form-field input {
            width: 100%;
            padding: 12px 14px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
            transition: border 0.2s;
        }

            .form-field input:focus {
                border-color: #1976d2;
                outline: none;
            }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: bold;
        color: #555;
    }

    .validation-error {
        display: block;
        color: #d32f2f;
        font-size: 0.9rem;
        margin-top: 4px;
    }

    .submit-button {
        display: inline-block; /* allows it to size to content */
        width: auto; /* override full width if set */
        padding: 10px 20px; /* adjust padding */
        background-color: #1976d2;
        color: #fff;
        border: none;
        border-radius: 10px;
        font-size: 1.05rem;
        font-weight: bold;
        cursor: pointer;
        text-align: center;
        text-decoration: none; /* remove underline from <a> */
        transition: background 0.2s, transform 0.1s;
        margin:0 auto;
        display:block;
        margin-top:3px;
    }

    .link-button {
        display: inline-block; /* size to content */
        width: auto; /* don’t stretch */
        padding: 10px 20px;
        background-color: #1976d2;
        color: #fff;
        border: none;
        border-radius: 10px;
        font-size: 1.05rem;
        font-weight: bold;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        transition: background 0.2s, transform 0.1s;
        /* center horizontally */
        margin: 0 auto;
    }

        .link-button:hover {
            background-color: #1565c0;
            transform: translateY(-1px);
        }

        .link-button:active {
            transform: translateY(1px);
        }



        .submit-button:hover {
            background-color: #1565c0;
            transform: translateY(-1px);
        }

        .submit-button:active {
            transform: translateY(1px);
        }

    .text-green {
        color: #43a047;
        text-align: center;
        font-weight: bold;
    }

    /* Alerts */
    .custom-alert.error-alert {
        max-width: 480px;
        margin: 0 auto 30px;
        padding: 20px 25px;
        border: 3px solid #d32f2f;
        background-color: #ffebee;
        color: #b71c1c;
        border-radius: 10px;
        font-weight: bold;
        text-align: center;
        box-shadow: 0 5px 12px rgba(0,0,0,0.15);
        font-size: 1.05rem;
    }

    .custom-alert.warning-alert {
        max-width: 480px;
        margin: 0 auto 30px;
        padding: 20px 25px;
        border: 3px solid #f57f17;
        background-color: #fff8e1;
        color: #f57f17;
        border-radius: 10px;
        font-weight: bold;
        text-align: center;
        box-shadow: 0 5px 12px rgba(0,0,0,0.15);
        font-size: 1.05rem;
    }

    .success-modal {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 9999;
        max-width: 480px;
        width: 90%;
        padding: 20px 25px;
        border: 3px solid #43a047;
        background-color: #e8f5e9;
        color: #1b5e20;
        border-radius: 10px;
        font-weight: bold;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        font-size: 1.05rem;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
    }

        .success-modal.show-success {
            opacity: 1;
            pointer-events: auto;
            transform: translateX(-50%) translateY(0);
        }

        .success-modal.hide-success {
            opacity: 0;
            transform: translateX(-50%) translateY(-20px);
            pointer-events: none;
        }

    .checkbox-label {
        display: flex;
        align-items: center; /* vertically center input and text */
        gap: 5px; /* space between checkbox and text */
        cursor: pointer;
    }

        .checkbox-label input {
            margin: 0; /* remove default margin */
        }

</style>
